{
    "name": "math-manipulator",
    "displayName": "math-manipulator",
    "description": "Wrapper extension that provides support for the `math-manipulator` project directly inside Visual Studio Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "math-manipulator.helloWorld",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "compile-main-dependencies": "VITE_BASE=/src/dist/ npm run --prefix main-project-source build",
        "link-main-dependencies": "ln -sf ./../main-project-source/dist/ ./src/"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@types/vscode": "^1.84.0",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "@vscode/test-electron": "^2.3.6",
        "css-loader": "^6.8.1",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "html-loader": "^4.2.0",
        "mocha": "^10.2.0",
        "style-loader": "^3.3.3",
        "ts-loader": "^9.5.0",
        "typescript": "^5.2.2",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    }
}
